</c:if>

if(_checkFail){
		return "<fmt:message key="composeExitConfirmation"/>";
	}else{
		return;
	}
}

window.onbeforeunload = checkForChanges;

cancelOnbeforeUnload = function(){
	window.onbeforeunload = null;
}

