grabFieldValues();

checkForChanges = function(){
	var _checkFail = false;
	var _el = _form.elements;
	for ( var _i=0;_i < _el.length; _i++){
		if(_el[_i].type == "text" || _el[_i].type == "textarea"){
			if(_fields[_el[_i].name] != _el[_i].value) { _checkFail = true;}
